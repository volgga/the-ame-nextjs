{
  "name": "nextjs-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "fix-visibility": "echo 'Выполните supabase/scripts/rls-open-public-close-sensitive.sql в Supabase'",
    "diagnose": "echo 'Проверьте supabase/checks.sql и RLS-политики в Supabase'",
    "migrate-images": "tsx scripts/migrate-images.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@supabase/supabase-js": "^2.93.3",
    "@tiptap/extension-link": "^2.27.2",
    "@tiptap/react": "^2.27.2",
    "@tiptap/starter-kit": "^2.27.2",
    "@types/sharp": "^0.31.1",
    "bcryptjs": "^3.0.3",
    "isomorphic-dompurify": "^2.36.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-phone-input-2": "^2.15.1",
    "react-zoom-pan-pinch": "^3.7.0",
    "sharp": "^0.34.5",
    "zod": "^3.23.8"
  },
  "browserslist": [
    "chrome >= 111",
    "edge >= 111",
    "firefox >= 111",
    "safari >= 16.4"
  ],
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.23",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.11",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  }
}
