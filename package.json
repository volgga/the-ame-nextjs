    "jose": "^6.1.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-phone-input-2": "^2.15.1",
    "sharp": "^0.34.5",
    "zod": "^3.23.8"
