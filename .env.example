# Supabase (уже используются в проекте)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Для серверного админ-клиента (можно тот же URL)
SUPABASE_URL=

# Service Role — только для серверных админ-операций (никогда на клиент!)
SUPABASE_SERVICE_ROLE_KEY=

# Админка: логин/пароль не хранятся в коде. Пароль — только bcrypt hash в env.
# Логин (должен совпадать с формой входа)
ADMIN_USERNAME=admin
# bcrypt hash пароля (в кавычках — в хеше есть $, без кавычек значение обрежется). Сгенерировать: ADMIN_PASSWORD_PLAIN=yourpassword node scripts/hash-admin-password.mjs
ADMIN_PASSWORD_HASH='$2b$10$...'
# Секрет для подписи session cookie (32+ символов, случайная строка). Не коммитить.
ADMIN_SESSION_SECRET=

# Tinkoff Internet Acquiring (тест/боевой — переключается через разные значения)
TINKOFF_TERMINAL_KEY=
TINKOFF_PASSWORD=

# Базовый URL сайта. Обязателен для редиректа после оплаты (T-Bank откроет SuccessURL/FailURL).
# Прод: https://theame.ru . Локально можно переопределить, например http://localhost:3000 или https://example.ngrok-free.app
SITE_URL=https://theame.ru
NEXT_PUBLIC_SITE_URL=https://theame.ru

# URL редиректа после оплаты (опционально). Если не заданы — собираются из NEXT_PUBLIC_SITE_URL + /payment/success и /payment/fail. В Init всегда добавляется ?orderId=...
# TINKOFF_SUCCESS_URL=
# TINKOFF_FAIL_URL=

# Вебхук: Tinkoff шлёт POST сюда при смене статуса. В кабинете T-Bank указать тот же URL.
# Продакшн: https://theame.ru/api/tinkoff-callback . Локально — ngrok и т.п.
TINKOFF_NOTIFICATION_URL=

# Telegram Bot API для отправки уведомлений о формах
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
# Опционально: ID топика для форумов (если не задан — сообщения в основной чат)
TELEGRAM_THREAD_ID=

# Отдельный чат/тред для уведомлений о заказах и оплате (не формы)
TELEGRAM_ORDERS_CHAT_ID=
TELEGRAM_ORDERS_THREAD_ID=1947
