# Supabase (уже используются в проекте)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Для серверного админ-клиента (можно тот же URL)
SUPABASE_URL=

# Service Role — только для серверных админ-операций (никогда на клиент!)
SUPABASE_SERVICE_ROLE_KEY=

# Админка: пароль для входа (без регистрации)
ADMIN_PASSWORD=

# Tinkoff Internet Acquiring (тест/боевой — переключается через разные значения)
TINKOFF_TERMINAL_KEY=
TINKOFF_PASSWORD=

# Базовый URL сайта. Обязателен для редиректа после оплаты (T-Bank откроет SuccessURL/FailURL).
# Локально: http://localhost:3000 . Тесты через туннель: https://example.ngrok-free.app
NEXT_PUBLIC_SITE_URL=https://example.ngrok-free.app

# URL редиректа после оплаты (опционально). Если не заданы — собираются из NEXT_PUBLIC_SITE_URL + /payment/success и /payment/fail. В Init всегда добавляется ?orderId=...
# TINKOFF_SUCCESS_URL=
# TINKOFF_FAIL_URL=

# Вебхук: Tinkoff шлёт POST сюда при смене статуса. В кабинете T-Bank указать тот же URL.
# Продакшн: https://theame.ru/api/tinkoff-callback . Локально — ngrok и т.п.
TINKOFF_NOTIFICATION_URL=

# Telegram Bot API для отправки уведомлений о формах
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
# Опционально: ID топика для форумов (если не задан — сообщения в основной чат)
TELEGRAM_THREAD_ID=
